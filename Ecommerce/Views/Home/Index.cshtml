@{
    ViewData["Title"] = "Home Page";
}

<style>
        body {
            <!--background-image: url('images/bac');-->
        background-image: url('@Url.Content("~/images/backgroundimage.jpg")');
            background-size: cover;
            background-position: center;
            font-family: Arial, sans-serif;
            color: white;
            text-align: center;
            
        }
        .row {
            padding: 50px;
            background-color: rgba(0, 0, 0, 0.6);
            display: inline-block;
            margin-top: 100px;
            border-radius: 10px;
            animation: fadeInUp 2s ease-in-out;
        }
        h2 {
            font-size: 2.5em;
            animation: slideIn 2s ease-in-out;
        }
        @@keyframes fadeInUp {
            from { opacity: 0; transform: translateY(50px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @@keyframes slideIn {
            from { opacity: 0; transform: translateX(-100px); }
            to { opacity: 1; transform: translateX(0); }
        }
        .scroll-container {
            display: flex;
            overflow-x: auto;
            white-space: nowrap;
            padding: 20px;
        }
        .scroll-container img {
            width: 300px;
            height: 200px;
            margin: 10px;
            border-radius: 10px;
            transition: transform 0.3s;
        }
        .scroll-container img:hover {
            transform: scale(1.1);
        }
    </style>

<div class="row">
    
    <h2>Welcome To My Restuarant</h2>

    <div class="scroll-container">
        <img src="~/Images/dish1.jpg" alt="Dish 1">
        <img src="~/Images/dish2.jpg" alt="Dish 2">
        <img src="~/Images/dish3.jpg" alt="Dish 3">
        <img src="~/Images/dish4.jpg" alt="Dish 4">
    </div>
</div>