@model IEnumerable<Ingredient>

    @{
        ViewBag.Title = "List Of Resturant Ingredients";
    }



<!-- Centered Content -->
<div 
        <div>
                <h1>Ingredients</h1>
                <a asp-action="Create" class="btn btn-secondary">Create New Ingredients</a>

        </div>
    
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (Ingredient i in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => i.Name)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@i.IngredientId" class="btn btn-success">Details</a>
                        <a asp-action="Edit" asp-route-id="@i.IngredientId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@i.IngredientId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

    